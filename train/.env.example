# S3 Configuration (works with AWS S3, MinIO, DigitalOcean Spaces, etc.)
# For AWS S3: Leave S3_ENDPOINT_URL empty
# For MinIO: Set S3_ENDPOINT_URL=http://localhost:9000
# For DigitalOcean: Set S3_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_BUCKET=datasets
S3_RATINGS_KEY=ratings.csv
S3_REGION=us-east-1
S3_USE_SSL=False

# Weights & Biases Configuration
WANDB_API_KEY=your_wandb_api_key
WANDB_PROJECT=sagepick-train
WANDB_ENTITY=your_wandb_entity

# Training Configuration
MF_N_FACTORS=40
MF_N_ITER=7
UCF_K_NEIGHBORS=50
UCF_SIMILARITY=pearson
TEST_SIZE=0.2
RANDOM_STATE=42

# Inference Service Configuration
INFERENCE_SERVICE_URL=http://localhost:8001
